= form_for @book, html: { class: "form-horizontal", role: "form" } do |f|
  -if @book.errors.any?
    .alert.alert-danger.alert-dismissable{role: "alert"}
      %button.close{type: "button", data: {dismiss: "alert"} }
        %span{aria: {hidden: "true"} } &times;
        %span.sr-only Close
      %h4= "#{pluralize(@book.errors.count, "error")} prohibited this book from being saved:"

      %ul
        - @book.errors.full_messages.each do |msg|
          %li= msg

  .form-group
    = f.label :name, class: 'col-sm-2 control-label'
    .col-sm-10
      = f.text_field :name, class: 'form-control'
  .form-group
    = f.label :author, class: 'col-sm-2 control-label'
    .col-sm-10
      = f.text_field :author, class: 'form-control'
  .form-group
    = f.label :page_count, class: 'col-sm-2 control-label'
    .col-sm-10
      = f.number_field :page_count, class: 'form-control'
  .form-group
    .col-sm-offset-2.col-sm-10
      = f.submit class: 'btn btn-primary'
      = link_to books_path, class: 'btn btn-default' do
        %span.glyphicon.glyphicon-list-alt
        Back
