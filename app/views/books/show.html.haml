.page-header
  = link_to books_path, class: 'btn btn-default' do
    %span.glyphicon.glyphicon-list-alt
    Back
  = link_to edit_book_path(@book), class: 'btn btn-primary' do
    %span.glyphicon.glyphicon-pencil
    Edit
  %h1 Show book

%dl.dl-horizontal
  %dt Name:
  %dd= @book.name
  %dt Author:
  %dd= @book.author
  %dt Page count:
  %dd= @book.page_count
